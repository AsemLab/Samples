<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/title_profile"
        style="@style/FragmentTitle"
        android:text="@string/title_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ring_profile_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_profile"
        app:srcCompat="@drawable/circle_green"
        app:tint="@color/green_start" />

    <ImageView
        android:id="@+id/ring_profile_image2"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ring_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ring_profile_image"
        app:srcCompat="@drawable/circle_green" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ring_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ring_profile_image"
        tools:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/profile_name_title"
        style="@style/Title"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ring_profile_image" />


    <TextView
        android:id="@+id/profile_name"
        style="@style/Subtitle"
        android:text="Asem Mahmoud"
        app:layout_constraintBaseline_toBaselineOf="@id/profile_name_title"
        app:layout_constraintStart_toEndOf="@id/profile_name_title" />

    <TextView
        android:id="@+id/profile_age_title"
        style="@style/Title"
        android:text="Age:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name_title" />


    <TextView
        android:id="@+id/profile_age"
        style="@style/Subtitle"
        android:text="28"
        app:layout_constraintBaseline_toBaselineOf="@id/profile_age_title"
        app:layout_constraintStart_toEndOf="@id/profile_age_title" />

    <TextView
        android:id="@+id/profile_email_title"
        style="@style/Title"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_age_title" />


    <TextView
        android:id="@+id/profile_email"
        style="@style/Subtitle"
        android:text="asem.m.abualrub@gmail.com"
        app:layout_constraintBaseline_toBaselineOf="@id/profile_email_title"
        app:layout_constraintStart_toEndOf="@id/profile_email_title" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_button"
        style="@style/Button"
        android:backgroundTint="@color/red_end"
        android:text="Delete account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>